        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/namecast"
            android:text="test"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"


            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/primaryContainer"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Birthday: "
                android:id="@+id/birthTag"
                android:textColor="@color/blue500"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthTag"
                android:layout_marginTop="9dp"
                android:text="test"

                android:textColor="@color/black"
                android:id="@+id/birthday"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth PLace: "
                android:visibility="visible"

                android:id="@+id/tagplace"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/birthday"
                android:textColor="@color/blue500"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagplace"
                android:id="@+id/place"
                android:text="test"

                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/primaryContainer"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tagOvr"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:text="Biography :"
                android:textColor="@color/blue500"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tagOvr"

                    android:layout_margin="30dp"
                    android:text="tets :"

                    android:id="@+id/ovr"
                    />


        </RelativeLayout>
        <fr.castorflex.android.circularprogressbar.CircularProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/smothCirCast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:indeterminate="true"
            app:cpb_colors="@array/colorsSmooth"
            app:cpb_rotation_speed="2.0"
            app:cpb_sweep_speed="1.0"
            app:cpb_min_sweep_angle="10"
            app:cpb_max_sweep_angle="300"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
